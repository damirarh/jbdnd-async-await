<Window x:Class="Demo2_AsyncVoid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="180">
    <StackPanel Margin="5">
        <Button Click="OnGetData" Margin="5">Get Data</Button>
        <CheckBox x:Name="IsNetworkSlow" Margin="5">Slow Network</CheckBox>
        <CheckBox x:Name="ThrowException" Margin="5">Throw Exception</CheckBox>
        <TextBlock TextAlignment="Center" Margin="5" x:Name="StatusText" />
    </StackPanel>
</Window>
